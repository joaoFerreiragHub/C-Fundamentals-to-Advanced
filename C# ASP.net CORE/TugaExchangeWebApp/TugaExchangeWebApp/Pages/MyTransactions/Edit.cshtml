@page
@model TugaExchangeWebApp.Pages.MyTransactions.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Transaction</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Transaction.Id" />
            <div class="form-group">
                <label asp-for="Transaction.Quantity" class="control-label"></label>
                <input asp-for="Transaction.Quantity" class="form-control" />
                <span asp-validation-for="Transaction.Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Transaction.Price" class="control-label"></label>
                <input asp-for="Transaction.Price" class="form-control" />
                <span asp-validation-for="Transaction.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Transaction.Name" class="control-label"></label>
                <input asp-for="Transaction.Name" class="form-control" />
                <span asp-validation-for="Transaction.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Transaction.CoinId" class="control-label"></label>
                <select asp-for="Transaction.CoinId" class="form-control" asp-items="ViewBag.CoinId"></select>
                <span asp-validation-for="Transaction.CoinId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Transaction.Comission" class="control-label"></label>
                <input asp-for="Transaction.Comission" class="form-control" />
                <span asp-validation-for="Transaction.Comission" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Transaction.UserID" class="control-label"></label>
                <select asp-for="Transaction.UserID" class="form-control" asp-items="ViewBag.UserID"></select>
                <span asp-validation-for="Transaction.UserID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
